<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:strip="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <com.dryseed.dryseedapp.widget.viewpager.pagerSlidingTabStrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:textSize="15dp"
        android:textColor="#9b9b9b"
        strip:pstsDividerColor="@android:color/transparent"
        strip:pstsIndicatorColor="#f02b2b"
        strip:pstsIndicatorHeight="3dp"
        strip:pstsShouldExpand="true"
        strip:pstsTabBackground="@android:color/transparent"
        strip:pstsTabPaddingLeftRight="10dp"
        strip:pstsUnderlineHeight="0dp"
        strip:selectedTabTextColor="#f02b2b"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        tools:context=".MainActivity" />

</RelativeLayout>