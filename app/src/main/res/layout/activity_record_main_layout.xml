<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/record_btn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="@string/record_speak"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/record_play_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/record_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="@string/record_play"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/quick_play_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="@string/quick_play"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/slow_play_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="@string/slow_play"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/record_log_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/record_play_layout"
        android:background="#cccccc"
        android:text="日志"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/record_volumn_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@id/record_play_layout"
        android:background="#ff00ffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/record_volumn_indicator_6"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

        <View
            android:id="@+id/record_volumn_indicator_5"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

        <View
            android:id="@+id/record_volumn_indicator_4"
            android:layout_width="25dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

        <View
            android:id="@+id/record_volumn_indicator_3"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

        <View
            android:id="@+id/record_volumn_indicator_2"
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

        <View
            android:id="@+id/record_volumn_indicator_1"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#000000" />

    </LinearLayout>
</RelativeLayout>