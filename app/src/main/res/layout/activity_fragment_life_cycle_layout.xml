<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_btns"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/replace_b_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="replaceB"
            android:textSize="8dp" />

        <Button
            android:id="@+id/replace_b_backstack_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="replaceBWithAddToBackStack"
            android:textSize="8dp" />

        <Button
            android:id="@+id/replace_a_backstack_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="replaceAWithAddToBackStack"
            android:textSize="8dp" />

        <Button
            android:id="@+id/add_show_a_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="add&amp;showA"
            android:textSize="8dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_btns" />

</RelativeLayout>