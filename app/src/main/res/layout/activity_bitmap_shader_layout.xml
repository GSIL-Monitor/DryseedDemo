<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:custom="http://schemas.android.com/apk/res/com.dryseed.dryseedapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:id="@+id/id_qiqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/qiqiu" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/aa" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:id="@+id/id_meinv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/aa"
            custom:borderRadius="20dp"
            custom:type="round" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon"
            custom:borderRadius="40dp"
            custom:type="round" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>

        <com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/qiqiu"
            custom:borderRadius="60dp"
            custom:type="round" >
        </com.dryseed.dryseedapp.canvas.bitmapShaderRoundImage.RoundImageView>
    </LinearLayout>

</ScrollView>