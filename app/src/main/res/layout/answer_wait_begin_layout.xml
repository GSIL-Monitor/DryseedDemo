<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="22dp"
        android:src="@drawable/answer_small_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:textColor="#242021"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="嘿嘿答题赢钻石" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#242021"
            android:textSize="14sp"
            tools:text="最多可获得2000钻石" />

        <TextView
            android:id="@+id/count_down_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textColor="#242021"
            android:textSize="16sp"
            tools:text="答题开始倒计时" />

        <TextView
            android:id="@+id/count_down_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#FFBF2E"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="5:00" />

        <Button
            android:id="@+id/button"
            android:layout_width="182dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="报名参加"
            android:textColor="#242021"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sign_up_succ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/answer_sign_up_succ"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="报名成功！"
            android:textColor="#242021"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>
</merge>